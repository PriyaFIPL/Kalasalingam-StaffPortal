<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/appBackGroundWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="60dp">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/logo"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/login_border"
                android:orientation="vertical"
                >

                       <TextView
                android:id="@+id/topSecondlmage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loginTitle"
                android:fontFamily="monotype corsiva"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:textColor="@color/appColorText"
                android:textColorHighlight="@android:color/primary_text_dark"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textSize="@dimen/login_staff"/>
            <!--android:backgroundTint="#0267B1"-->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/textInputLayout"
                    android:id="@+id/usernameInputLayout"
                    android:layout_marginTop="10dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/textInput"
                        android:id="@+id/usernameInput"
                        android:hint="@string/loginUserName"
                        android:drawableLeft="@drawable/ic_user_person_24"

                        />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordInputLayout"

                    app:passwordToggleEnabled="true"

                    style="@style/textInputLayout"
                    >


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordInput"
                        style="@style/textInput"
                        android:hint="@string/loginPassword"
                        android:drawableLeft="@drawable/ic_password_24"
                        android:drawableStart="@drawable/ic_password_24"
                        android:inputType="textPassword" />

                </com.google.android.material.textfield.TextInputLayout>



            <Button
                android:id="@+id/loginButton"
                style="@style/appButton"
                android:text="@string/loginButton"
                 />
            </LinearLayout>


            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:text="@string/loginPowered"
                android:layout_gravity="center"
                android:textColor="@color/colorBlack"
                android:layout_height="wrap_content"></TextView>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_gravity="center|bottom"
                app:srcCompat="@drawable/evarsitylogo"/>
            <ImageButton
                android:id="@+id/btnInfo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_info_selector"></ImageButton>
        </LinearLayout>




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>