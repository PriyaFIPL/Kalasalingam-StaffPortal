<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="@dimen/corner_radious"
    app:cardElevation="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/btnselector_revarse">
        <ImageView
            android:id="@+id/imgMenuImage"
            android:layout_width="40dp"
            android:layout_centerVertical="true"
        android:background="@drawable/grid_corner_radious"
        android:layout_height="40dp"
        android:padding="1dp"
            />
        <TextView
            android:id="@+id/txtMenuContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgMenuImage"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:textSize="@dimen/home_category"/>

        <ImageView
            android:id="@+id/imgNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_navigate_next_24" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>