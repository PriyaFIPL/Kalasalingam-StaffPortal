<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <TableLayout
        android:id="@+id/tblmenu"
        android:stretchColumns="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/imgMenuImage"
                android:layout_gravity="left"
                android:paddingRight="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp">
            </ImageView>
            <TextView
                android:id="@+id/txtmenu"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:textStyle="normal"
                android:textSize="15dp"
                android:textColor="#000000"
                android:gravity="left|center_vertical">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="| "
                android:textColor="#C0C0C0"
                android:gravity="center_vertical"
                ></TextView>
            <!--            <TextView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="40dp"-->
            <!--                android:textSize="15dp"-->
            <!--                android:gravity="center_vertical"-->
            <!--                android:text="â‚¹"></TextView>-->
            <TextView
                android:id="@+id/txtprice"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textSize="15dp"
                android:gravity="right|center_vertical"></TextView>
            <TextView
                android:layout_width="5dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                ></TextView>
            <Button
                android:id="@+id/btnminus"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/btnnorma_pinkl"
                android:textColor="@color/colorWhite"
                android:text="-"
                android:textSize="@dimen/menu_buttons"></Button>
            <TextView
                android:id="@+id/txtquantity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:paddingRight="2dp"
                android:gravity="center"
                android:text="0"
                ></TextView>
            <Button
                android:id="@+id/btnplus"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/btnnorma_pinkl"
                android:textColor="@color/colorWhite"
                android:text="+"
                android:textSize="@dimen/menu_buttons"></Button>
        </TableRow>
    </TableLayout>
</RelativeLayout>