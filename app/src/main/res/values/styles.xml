<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appColor</item>
        <item name="colorPrimaryDark">@color/appColor</item>
        <item name="colorAccent">@color/appColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Style for header text in the order form -->
    <style name="HeaderTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorGrey</item>
        <item name="android:textColor">@color/appColorText</item>
    </style>

    <!-- Style for header text in the order form -->
    <style name="StyleHomeGridCardView">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="cardBackgroundColor">@color/cardColor</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="StyleHomeGridLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="StyleHomeGridImage">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/grid_corner_radious</item>
        <item name="android:padding">1dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="StyleManagementGridImage">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/grid_corner_radious_dashboard</item>
        <item name="android:padding">7dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="StyleHomeGridText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/appColorText</item>
        <item name="android:textSize">@dimen/home_text</item>

    </style>

    <style name="textInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="passwordToggleTint">@color/appColor</item>
    </style>
    <style name="textInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textSize">@dimen/login_text</item>
            </style>

    <style name="textInputProfileHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textSize">@dimen/login_text</item>
        <item name="android:textColor">@color/colorBlack</item>

    </style>

    <style name="textInputProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:editable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:textSize">@dimen/login_text</item>
        <item name="android:focusable">false</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textColorHint">@color/appColor</item>
    </style>
    <style name="textInputProfileEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:editable">true</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textSize">@dimen/login_text</item>
        <item name="android:focusable">true</item>
        <item name="android:backgroundTint">@color/appColor</item>
        <item name="android:textColorHint">@color/appColor</item>
    </style>

    <style name="lstextInputProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:editable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:textSize">@dimen/lstatus_text</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:focusable">false</item>
        <item name="android:backgroundTint">@color/colorGrey</item>
        <item name="android:textColorHint">@color/appColor</item>
    </style>

    <style name="textInputLayoutProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="passwordToggleTint">@color/appColor</item>
        <item name="android:drawablePadding">0dp</item>

        <item name="boxBackgroundMode">none</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@color/colorWhite</item>
        </style>

    <style name="appButton">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/btnselector</item>
        <item name="android:textSize">@dimen/login_button</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
<style name="LeaveStatusText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">16dp</item>
       </style>

    <style name="textInputLayoutLeaveEntry">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="passwordToggleTint">@color/appColor</item>
    </style>
    <style name="textInputLeaveEntry">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">@dimen/lstatus_text</item>
        <item name="android:inputType">none</item>
        <item name="android:focusable">false</item>
        <item name="android:editable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:padding">10dp</item>
        <item name="android:text"></item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="textLeaveCount">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/cell_shape</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/lAttan_text</item>
        <item name="android:text">1</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="textInputLeaveEntryWithKeyBoard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">@dimen/lstatus_text</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">10dp</item>
        <item name="android:text"></item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="textBioValue">
        <item name="android:padding">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/student_staff_list_header</item>
        <item name="android:background">@color/cardColoro</item>

    </style>
<style name="notificationHeaderValue">
        <item name="android:padding">10dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/student_staff_list_header</item>
        <item name="android:background">@color/colorblue</item>

        </style>
    <style name="StyleFooder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/cardColoro</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">8sp</item>

    </style>

    <style name="AppTheme.NoActionBar.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
